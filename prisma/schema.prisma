generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String
  createdAt DateTime @default(now())
  status   Int
}

model Property {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  price       Float?
  category    String // "Corporate" or "Retail"
  images      Json
  latitude    Float
  longitude   Float
  type        String
  createdAt   DateTime @default(now())
  manager     String // Contact details of property manager
  status      Int
}

model Inquiry {
  id          Int     @id @default(autoincrement())
  companyName String
  contactPerson String
  email       String
  phone       String
  requirements String
  budget      Float?
  attachments Json? // Optional file uploads
  createdAt   DateTime @default(now())
  status      Int
}